/ {
       chosen {
           zmk,kscan = &kscan0;
       };

       kscan0: kscan {
           compatible = "zmk,kscan-gpio-direct";
           input-gpios
               = <&gpio0 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>   // IO5
               , <&gpio0 24 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>  // IO24
               ;
       };
   };
